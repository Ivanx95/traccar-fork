<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
  logicalFilePath="changelog-7.1.0">

  <changeSet author="author" id="changelog-7.1.0">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="tc_user_client"/>
      </not>
    </preConditions>
    <createTable tableName="tc_user_client">

      <column name="clientid" type="INT" />
      <column name="userid" type="INT" />

    </createTable>

    <addForeignKeyConstraint baseTableName="tc_user_client" baseColumnNames="userid" constraintName="fk_user_client_user" referencedTableName="tc_users" referencedColumnNames="id" onDelete="CASCADE" />
    <addForeignKeyConstraint baseTableName="tc_user_client" baseColumnNames="clientid" constraintName="fk_user_client_client" referencedTableName="tc_clients" referencedColumnNames="id" onDelete="CASCADE" />


  </changeSet>

</databaseChangeLog>
